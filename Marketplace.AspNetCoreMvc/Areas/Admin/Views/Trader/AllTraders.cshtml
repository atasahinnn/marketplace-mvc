@model List<SellerVm>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="alert alert-custom alert-light alert-shadow gutter-b mt-5">
    <div class="alert-icon">
        <span class="svg-icon svg-icon-primary svg-icon-xl">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <rect x="0" y="0" width="24" height="24"></rect>
                    <path d="M7.07744993,12.3040451 C7.72444571,13.0716094 8.54044565,13.6920474 9.46808594,14.1079953 L5,23 L4.5,18 L7.07744993,12.3040451 Z M14.5865511,14.2597864 C15.5319561,13.9019016 16.375416,13.3366121 17.0614026,12.6194459 L19.5,18 L19,23 L14.5865511,14.2597864 Z M12,3.55271368e-14 C12.8284271,3.53749572e-14 13.5,0.671572875 13.5,1.5 L13.5,4 L10.5,4 L10.5,1.5 C10.5,0.671572875 11.1715729,3.56793164e-14 12,3.55271368e-14 Z" fill="#000000" opacity="0.3"></path>
                    <path d="M12,10 C13.1045695,10 14,9.1045695 14,8 C14,6.8954305 13.1045695,6 12,6 C10.8954305,6 10,6.8954305 10,8 C10,9.1045695 10.8954305,10 12,10 Z M12,13 C9.23857625,13 7,10.7614237 7,8 C7,5.23857625 9.23857625,3 12,3 C14.7614237,3 17,5.23857625 17,8 C17,10.7614237 14.7614237,13 12,13 Z" fill="#000000" fill-rule="nonzero"></path>
                </g>
            </svg>
        </span>
    </div>
    <div class="alert-text text-primary">
        <p>@Localizer["Alert"]</p>
    </div>
</div>
<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @Localizer["TraderList"]
                <span class="d-block text-muted pt-2 font-size-sm">@Localizer["TraderSpan"]</span>
            </h3>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-7">
            <div class="row align-items-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="row align-items-center">
                        <div class="col-md-4 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" class="form-control" placeholder="@Localizer["Search"]" id="kt_datatable_search_query" />
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4 my-2 my-md-0">
                            <div class="d-flex align-items-center">
                                <label class="mr-3 mb-0 d-none d-md-block">@Localizer["PackageLabel"]</label>
                                <select class="form-control" id="kt_datatable_search_status">
                                    <option value="">@Localizer["All"]</option>
                                    <option value="1">@Localizer["Standart"]</option>
                                    <option value="2">@Localizer["Premium"]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 my-2 my-md-0">
                            <div class="d-flex align-items-center">
                                <label class="mr-3 mb-0 d-none d-md-block">@Localizer["StatusLabel"]</label>
                                <select class="form-control" id="kt_datatable_search_type">
                                    <option value="">@Localizer["All"]</option>
                                    <option value="1">@Localizer["Active"]</option>
                                    <option value="2">@Localizer["Passive"]</option>
                                    <option value="2">@Localizer["Freezed"]</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-xl-4 mt-5 mt-lg-0">
                    <a href="#" class="btn btn-light-primary px-6 font-weight-bold">@Localizer["ButtonSearch"]</a>
                </div>
            </div>
        </div>
        <!--begin: Datatable-->
        <table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable">
            <thead>
                <tr>
                    <th title="Field #1">@Localizer["TraderCode"]</th>
                    <th title="Field #2">@Localizer["RegistrationDate"]</th>
                    <th title="Field #3">@Localizer["StoreName"]</th>
                    <th title="Field #4">@Localizer["UserName"]</th>
                    <th title="Type">@Localizer["Type"]</th>
                    <th title="Package">@Localizer["Package"]</th>
                    <th title="Status">@Localizer["Status"]</th>
                    <th title="Field #8">@Localizer["Quantity"]</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td><a href="/Admin/Trader/SellerDetails?id=@Model[i].Id">@Model[i].UserCode</a></td>
                        <td>@Model[i].RegistrationDate.ToString("dd/MM/yyyy")</td>
                        @if (Model[i].StoreName != null) { <td>@Model[i].StoreName</td> } else { <td> - </td> }
                        <td>@Model[i].UserName</td>
                        @if (Model[i].StoreType != null) { <td>@Localizer[Model[i].StoreType.StoreTypeNames[1].Name]</td> } else { <td> - </td> }
                        <td>@Model[i].MembershipPackage.Id</td>
                        <td>@Model[i].SellerStatus.Id</td>
                        <td>@Model[i].ProductQuantity</td>
                    </tr>
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>

@section JavaScript{
    <script src="~/assets/js/pages/admin/trader-list.js"></script>
}