
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}
@if (TempData["InformationMessage"] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success h3">
                <p class="pt-3 text-center font-weight-bolder">@TempData["InformationMessage"]</p>
            </div>
        </div>
    </div>
}
<div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100" style="text-align:center">@Localizer["MagazaTurunuSecin"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mt-10 mb-10">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-1">
                            <input type="button" class="col-md 10 btn btn-outline-primary btn-lg" value="@Localizer["KisiselMagaza"]" onclick="location.href='@Url.Action("AddPersonalStore", "Account")'" style="height:120px;font-size:20px" />
                        </div>
                        <div class="col-md-6 mt-1 mb-1">
                            <input type="button" class="col-md 10 btn btn-outline-success btn-lg" value="@Localizer["KurumsalMagaza"]" onclick="location.href='@Url.Action("AddCompanyStore", "Account")'" style="height:120px;font-size:20px" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section JavaScript{
    @if (ViewBag.IsSellerANewUser != null)
    {
        <script>
            $('#myModal').modal();
        </script>
    }
}