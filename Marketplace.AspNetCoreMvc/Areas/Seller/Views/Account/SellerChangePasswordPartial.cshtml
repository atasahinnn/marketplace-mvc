@model SellerChangePasswordDto

<form asp-area="Seller" asp-controller="Account" asp-action="SellerChangePassword" method="post" id="passwordForm">
    <div class="modal-body">
        <div class="form-group">
            <label>@Localizer["SifreniziGirin"]</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>@Localizer["YeniSifreniz"]</label>
            <input type="password" asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>@Localizer["SifreniziTekrarGirin"]</label>
            <input type="password" asp-for="NewPasswordAgain" class="form-control" />
            <span asp-validation-for="NewPasswordAgain" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary " data-dismiss="modal">@Localizer["Kapat"]</button>
        <button type="submit" class="btn btn-primary btn-lg" @*data-dismiss="modal"*@ form="passwordForm">@Localizer["SifreyiGuncelle"]</button>
    </div>
</form>