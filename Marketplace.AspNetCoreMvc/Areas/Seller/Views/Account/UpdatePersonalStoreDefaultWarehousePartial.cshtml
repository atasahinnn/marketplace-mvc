@model PersonalStoreDefaultWarehouseDto

<form asp-area="Seller" asp-controller="Account" asp-action="UpdatePersonalStoreDefaultWarehouse" method="post">
    @Html.HiddenFor(x => x.Id)
    <div class="card p-3 border-secondary mt-5">
        <div class="card-header">
            <h5>@Localizer["VarsayilanDepo"]</h5>
        </div>
        <div class="card-body">
            <div class="row mt-2">
                <div class="form-group col-md-3">
                    <select class="form-control" asp-for="DefaultWarehouseId">
                        @if (ViewBag.Warehouses.Count == 0)
                        {
                        <option>@Localizer["KayitliDepoBulunamadi"]</option>
                        }
                        else
                        {
                            @foreach (var item in ViewBag.Warehouses)
                            {
                                if (item.Id == Model.DefaultWarehouseId)
                                {
                                    <option value="@item.Id" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        }
                    </select>
                    <span asp-validation-for="DefaultWarehouseId" class="text-danger"></span>
                </div>
                @if (ViewBag.Warehouses.Count > 0)
                {
                    <div class="form-group col-md-8">
                        <button type="submit" class="btn btn-light-info font-weight-bold">@Localizer["VarsayilanDepoyuGuncelle"]</button>
                    </div>
                }
                else
                {
                    <div class="form-group col-md-6">
                        <div class="border border-transparent p-3 bg-light-warning font-weight-bolder">
                            @Localizer["DepoYokAlert"]
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer">
            <span class="form-text text-muted">@Localizer["DepoSpan"]</span>
        </div>
    </div>
</form>